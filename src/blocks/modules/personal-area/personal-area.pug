-
    const defaultPersonalAreaProps = {
        classes: ''
    }

mixin personal-area(props= defaultPersonalAreaProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultPersonalAreaProps.classes
        }

    section.pa.pa-common(class= checkProps.classes)&attributes(attributes)
        .gkt-container
            .gkt-container__inner.gkt-container__inner--bg
                +title({
                    text: 'Персональный раздел',
                    size: '40'
                })
                .pa__content
                    <div class="row">
                        <div class="bx-content col-md-9 col-sm-8">	
