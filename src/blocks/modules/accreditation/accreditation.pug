    const defaultAccreditationProps = {
        classes: ''
    }

mixin accreditation(props= defaultAccreditationProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultAccreditationProps.classes
        }

    section.accreditation(class= checkProps.classes)&attributes(attributes)
