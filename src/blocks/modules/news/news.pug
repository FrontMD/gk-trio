-
    const defaultNewsProps = {
        classes: '',
        title: 'Будьте в курсе <br>последних <span>новостей</span>'
    }

mixin news(props= defaultNewsProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultNewsProps.classes,
            title: props.title ? props.title : defaultNewsProps.title
        }

    section.news(class= checkProps.classes)&attributes(attributes)
        .gkt-container
            .gkt-container__inner
                .news__header
                    .title-block
                        +title-tag({
                            text: 'Пресс-центр'
                        })
                        +title({
                            classes: 'news__title',
                            size: '40',
                            text: checkProps.title
                        })

                    +btn({
                        classes: 'news__all',
                        name: 'Больше новостей',
                        cMode: 'accent'
                    })

                .news__list
                    +news-link({
                        date: '20.10.2025',
                        title: '5 поток «Школы действия» стартовал в ООО «Агрофирма Трио»'
                    })
                    +news-link({
