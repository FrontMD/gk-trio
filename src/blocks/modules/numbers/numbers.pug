mixin numbers(props= defaultNumbersProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultNumbersProps.classes,
            cards: props.cards ? props.cards : defaultNumbersProps.cards
        }

    section.numbers(class= checkProps.classes)&attributes(attributes)
        .gkt-container
            .gkt-container__inner.gkt-container__inner--bg.gkt-container__inner--dark
                .numbers__grid
                    - let cards = checkProps.cards
                    - let count = 0

                    - while(count < cards.length)
                        - let titleClass = cards[count].smallTitle === true ? ' n-card__title--small' : ''
                        .n-card
                            .n-card__header
                                .n-card__title(class= titleClass)!= cards[count].title
                                .n-card__icon
                                    img(src=cards[count].icon alt="")
                            .n-card__text.text-editor!= cards[count].text
                        - count++
