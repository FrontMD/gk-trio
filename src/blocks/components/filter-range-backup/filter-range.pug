-
    const defaultFilterRangeProps = {
        classes: ''
    }

mixin filter-range(props = defaultFilterRangeProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultFilterRangeProps.classes
        }

    .filter-range(class=checkProps.classes data-js="filterRange" data-min="500" data-max="5000" data-step="10")
        input.filter-range__input.filter-range__input--min(type='number' min="0" max="5000" data-js="filterRangeMin")
        input.filter-range__input.filter-range__input--max(type='number' min="0" max="5000" data-js="filterRangeMax")
        .filter-range__range(data-js="filterRangeSlider")
