-
    const defaultTitleProps = {
        tag: '',
        size: '40',
        text: 'Заголовок',
        cMode: 'dark', //dark - на светлом фоне, light - на тёмном фоне
        classes: '',
    }

mixin title(props = defaultTitleProps)
    -
        const checkProps = {
            tag: props.tag ? props.tag : defaultTitleProps.tag,
            size: props.size ? props.size : defaultTitleProps.size,
            text: props.text ? props.text : defaultTitleProps.text,
            cMode: props.cMode ? props.cMode : defaultTitleProps.cMode,
            classes: props.classes ? props.classes : defaultTitleProps.classes
        }

        let sizeClass = ` title--${checkProps.size}`
        let colorClass = checkProps.cMode.length > 0 ? ` title--${checkProps.cMode}` : ''

    case checkProps.tag
        when 'h1'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h1!= checkProps.text
        when 'h2'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h2!= checkProps.text
        when 'h3'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h3!= checkProps.text
        when 'h4'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h4!= checkProps.text
        when 'h5'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h5!= checkProps.text
        when 'h6'
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                h6!= checkProps.text
        default	
            .title(class=checkProps.classes + sizeClass + colorClass)&attributes(attributes)
                != checkProps.text			